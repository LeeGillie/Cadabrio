# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text diff=python
*.pyx text diff=python

# Binary / large files
*.png binary
*.jpg binary
*.jpeg binary
*.ico binary
*.gif binary
*.bmp binary
*.tiff binary
*.webp binary
*.svg text
*.obj binary
*.stl binary
*.fbx binary
*.glb binary
*.gltf text
*.3mf binary
*.blend binary

# AI model files (Git LFS candidates)
*.onnx filter=lfs diff=lfs merge=lfs -text
*.safetensors filter=lfs diff=lfs merge=lfs -text
*.gguf filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text
*.pt filter=lfs diff=lfs merge=lfs -text
*.pth filter=lfs diff=lfs merge=lfs -text

# Config / Data
*.json text
*.yaml text
*.yml text
*.toml text
*.ini text
*.cfg text
